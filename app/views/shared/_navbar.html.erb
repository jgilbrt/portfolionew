<%
# Defines the project list to be used in the navigation drawer.
projects = [
  { name: "Bandcamp Redesign", path: bandcamp_project_path },
  { name: "British Fencing", path: british_fencing_project_path },
  { name: "Plan & Go", path: plan_and_go_project_path },
  { name: "KnowIt", path: knowit_project_path }
]
%>

<nav class="navbar">
  <div class="container-fluid px-4">
    <%= link_to home_path, class: "navbar-brand", style: "text-decoration: none;" do %>
      <div style="height: 44px; width: 124px; border-radius: 12px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
        <%= image_tag 'logo.jpg', style: "height: 100%; width: 100%; object-fit: cover;" %>
      </div>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "My Work", projects_path, class: "nav-link nav-main-link #{'active' if request.path.start_with?('/projects') && current_page?(projects_path)}" %>
      </li>
      <div class="project-links-wrapper">
        <% projects.each do |project| %>
          <li class="nav-item">
            <%= link_to project[:name], project[:path], class: "nav-link nav-project-link #{'active' if current_page?(project[:path])}" %>
          </li>
        <% end %>
      </div>
      <li class="nav-item">
        <%= link_to "About", about_path, class: "nav-link nav-main-link #{'active' if current_page?(about_path)}" %>
      </li>
      <li class="nav-item">
        <%= link_to "Contact Me", contact_path, class: "nav-link nav-main-link #{'active' if current_page?(contact_path)}" %>
      </li>
    </ul>
    <div class="offcanvas-social-links">
      <a href="#" class="social-icon"><i class="bi bi-linkedin"></i></a>
      <a href="#" class="social-icon"><i class="bi bi-dribbble"></i></a>
    </div>
  </div>
</div>

<style>
  /* Main Navbar Styling */
  .navbar {
    padding: 1rem 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1030;
    min-height: 88px;
    transition: background 0.3s ease;
  }

  /* Default / Mobile (< 1001px) Style */
  .navbar {
    background: #121212;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Desktop (> 1000px) Style */
  @media (min-width: 1001px) {
    .navbar {
      background: transparent;
      border-bottom: none;
    }
  }

  /* Burger Menu Button */
  .navbar-toggler { border: none; }
  .navbar-toggler:focus { box-shadow: none; }
  .navbar-toggler-icon { background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 0.8)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e"); }

  /* Side Drawer Panel */
  .offcanvas#offcanvasNavbar {
    --bs-offcanvas-bg: #121212 !important;
    --bs-offcanvas-color: white !important;
    --bs-btn-close-color: white !important;
    border-left: 1px solid rgba(255, 255, 255, 0.1) !important;
  }
  #offcanvasNavbar .offcanvas-header { min-height: 88px; align-items: center; border-bottom: 1px solid rgba(255, 255, 255, 0.1); }
  #offcanvasNavbar .offcanvas-body { display: flex; flex-direction: column; }
  #offcanvasNavbar .offcanvas-title { color: white; opacity: 0.9; }

  /* Drawer Links */
  #offcanvasNavbar .navbar-nav { align-items: flex-start; gap: 0.25rem; }
  #offcanvasNavbar .nav-link { color: white; opacity: 0.7; font-weight: 500; padding: 10px 20px; border-radius: 8px; transition: all 0.2s ease; width: 100%; }
  #offcanvasNavbar .nav-link:hover { opacity: 1; background: rgba(255, 255, 255, 0.08); }
  #offcanvasNavbar .nav-link.active { opacity: 1; font-weight: 600; background: rgba(255, 255, 255, 0.1); }
  #offcanvasNavbar .project-links-wrapper { width: 100%; padding-left: 1.5rem; margin-bottom: 0.5rem; }
  #offcanvasNavbar .nav-project-link { font-size: 0.95rem; opacity: 0.6; }
  #offcanvasNavbar .nav-project-link.active { opacity: 1; font-weight: 500; background: rgba(255, 255, 255, 0.15); }
  #offcanvasNavbar .nav-divider { border-color: rgba(255, 255, 255, 0.1); margin: 0.75rem 1.25rem; width: calc(100% - 2.5rem); }

  /* Social Links at bottom of drawer */
  #offcanvasNavbar .offcanvas-social-links { margin-top: auto; padding: 1rem 1.25rem; border-top: 1px solid rgba(255, 255, 255, 0.1); display: flex; justify-content: center; gap: 1.5rem; }
  #offcanvasNavbar .social-icon { color: white; opacity: 0.6; font-size: 1.25rem; text-decoration: none; transition: all 0.2s ease; }
  #offcanvasNavbar .social-icon:hover { opacity: 1; transform: scale(1.1); }
</style>
